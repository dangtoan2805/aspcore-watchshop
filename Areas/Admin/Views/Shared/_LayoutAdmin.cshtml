<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - watchShop.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/assets/img/favicon.png" rel="shortcut icon" />
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500|Poppins:400,500,600,700|Roboto:400,500" rel="stylesheet" />
    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet" />
    <!-- PLUGINS CSS STYLE -->
    <!-- No Extra plugin used -->
    @* <link href="~/assets/plugins/toastr/toastr.min.css" rel="stylesheet" /> *@
    <!-- SLEEK CSS -->
    <link href="~/lib/sleek/sleek.min.css" id="sleek-css" rel="stylesheet"  />
    <!-- PRELOADED CSS -->
    <link href="~/css/preloaded.css" rel="stylesheet" />
    <!-- MAIN CSS -->
    @RenderSection("css", false)
    <link href="~/css/template.css" rel="stylesheet" />
</head>
<body  class="header-fixed sidebar-fixed sidebar-dark header-light" id="body" >
    <!--***** Preloaded *****-->
    <div id="loading" style="opacity: 0.7;">
        <div id="loading-center">
            <div id="loading-center-absolute">
                <div class="object" id="object_one"></div>
                <div class="object" id="object_two"></div>
                <div class="object" id="object_three"></div>
                <div class="object" id="object_four"></div>
                <div class="object" id="object_five"></div>
                <div class="object" id="object_six"></div>
                <div class="object" id="object_seven"></div>
                <div class="object" id="object_eight"></div>
                <div class="object" id="object_big"></div>
            </div>
        </div>
	</div>
    <div class="wrapper" >
        <partial name="_SideBar" />
        <div class="page-wrapper">
        <!--***** Header*****-->
            <partial name="_HeaderAdmin"/>
        <!--***** Main*****-->  
            @RenderBody()
        <!--***** Footer *****-->
            <partial name="_FooterAdmin" />
        </div> 
    </div>
    <!--***** Scripts *****-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jekyll-search/jekyll-search.min.js"></script>
    <script src="~/lib/sleek/sleek.js"></script>
    @* <script src="~/assets/plugins/toastr/toastr.min.js"></script> *@
    <script src="~/js/admin/main-admin.js"> </script>
    @RenderSection("scripts", false)
</body>
</html>
