@{
    ViewBag.Title="Sản phẩm";
    ViewBag.IndexSideNav=2;
}
@section scripts{
    <script src="~/js/admin/products.js"></script> </script>
}
<div class="content-wrapper">
    <div class="content"> 
        <!-- Products -->
        <div class="card card-table-border-none">
            <div class="card-header">     
                <div class="col-md-4 col-12 mb-3">
                    <h2 class="mb-0" >Sản phẩm</h2>
                </div>
                <!-- Search -->
                <div class="col-md-4 col-12 mb-3">
                    <div class="search-form w-100">
                        <input type="text"  id="search-input" class="form-control" 
                            placeholder="'', 'chart' etc."/>
                    </div>
                </div>
                <!-- Add product -->
                <div class="col-md-4 col-8 mb-3 text-right">
                    <a id="vt-add-product" class="btn btn-primary text-white" style="cursor: pointer;"
                        href="/Admin/Product/Create">
                        <i class="mdi mdi-plus-circle"></i> Thêm sản phẩm</a>
                </div>
            </div>
            <div class="card-body pt-0 pb-5 vt-card-body">
                <div id="vt-loader">
                    <div class="loader"></div>
                </div>
                <div id="vt-data">
                <!--Header List-->
                    <div class="row mb-3 text-dark">
                        <div class="col-10">
                            <div class="row">
                                <div class="col-md-1 col-4">ID</div>
                                <div class="col-md-2 vt-d-none">Ảnh</div>
                                <div class="col-md-2 col-4">Tên</div>
                                <div class="col-md-2 vt-d-none" >
                                    <div class="dropdown d-inline-block">
                                        <span class="btn-square btn-outline-secondary vt-none-hover border-0" 
                                            type="button" id="dropdownCost" 
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                            Phân loại
                                            <i class="mdi mdi-chevron-down"></i>
                                        </span>
                                        <div id="vt-filter-cate" class="dropdown-menu" aria-labelledby="dropdownCost">
                                            <a class="dropdown-item" href="#" data-index="-1">Tất cả</a>
                                            @foreach (var item in ViewBag.Category)
                                            {
                                                <a class="dropdown-item" href="#" data-index="@item.ID">@item.Name</a>
                                            }
                                    
                                        </div>
                                    </div> 
                                </div>
                                <div class="col-md-2 vt-d-none" >
                                    <div class="dropdown d-inline-block">
                                        <span class="btn-square btn-outline-secondary vt-none-hover border-0 " 
                                            type="button" id="dropdownCost" 
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                            Loại dây
                                            <i class="mdi mdi-chevron-down"></i>
                                        </span>
                                        <div id="vt-filter-wire" class="dropdown-menu" aria-labelledby="dropdownCost">
                                            <a class="dropdown-item" href="#" data-index="-1">Tất cả</a>
                                            @foreach (var item in ViewBag.Wires)
                                            {
                                                <a class="dropdown-item" href="#" data-index="@item.ID">@item.Name</a>
                                            }
                                        </div>
                                    </div> 
                                </div>
                                <div class="col-md-1 col-4">Giá </div>
                                <div class="col-md-1 vt-d-none">Giảm </div>
                                <div class="col-md-1 vt-d-none" >
                                    <div class="dropdown d-inline-block">
                                        <span class="btn-square btn-outline-secondary vt-none-hover border-0 " 
                                            type="button" id="dropdownCost" 
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                            Bán
                                            <i class="mdi mdi-chevron-down"></i>
                                        </span>
                                        <div id="vt-orderby-sale" class="dropdown-menu" aria-labelledby="dropdownCost">
                                            <a class="dropdown-item" href="#" data-index="0">Thấp</a>
                                            <a class="dropdown-item" href="#" data-index="1">Cao</a>
                                        </div>
                                    </div> 
                                </div>                   
                            </div>
                        </div>
                        <div class="col-2 text-center">
                            <div class="dropdown d-inline-block dropleft">
                                <span class="btn-square btn-outline-secondary vt-none-hover border-0" 
                                    type="button" id="dropdownStatus" 
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                    Status
                                    <i class="mdi mdi-chevron-down"></i>
                                </span>
                                <div id="vt-orderby-status" class="dropdown-menu" aria-labelledby="dropdownStatus">
                                    <a class="dropdown-item" href="#" data-index="0">Đang bán</a>
                                    <a class="dropdown-item" href="#" data-index="1">Dừng bán</a>
                                </div>
                            </div> 
                        </div>
                    </div>
                    <!--Content List-->
                    <div id="vt-container-data"></div>
                </div>
            </div>
            <div class="card-footer bg-white py-3 text-center">
                <div class="d-flex justify-content-end align-items-center">
                    <nav class="pr-4">
                        <ul id="vt-pagination" class="pagination pagination-sm justify-content-center">
                        </ul>
                    </nav>
                    <p class="text-secondary pl-4 "><span  id="vt-total">0</span> sản phẩm</p>
                </div>
            </div>
        </div>
    </div>
</div>